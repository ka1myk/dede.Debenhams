<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>

        <!-- DO NOT CHANGE THE ORDER -->

        <referenceBlock name="product.attributes" remove="true" />
        <move element="page.messages" 								destination="product.info.main" as="page.messages" after="-"/>
        <move element="2zHtBkBMMuDiRVkJIfwtG0tTtqbiKAc4" 			destination="main" after="content.bottom"/> 							<!-- shop more -->
        <move element="product.info.upsell" 						destination="for-accordion" before="-"/>								<!-- you may also like -->
       					<!-- Product description -->
        <referenceContainer name="main">
        	<container name="for-accordion" as="for-accordion" label="Page Custom Content" htmlTag="div" htmlClass="for-accordion">
        		<block class="Magento\Framework\View\Element\Template" name="for-accordion-block"/>
        	</container>
			<container name="for-desc" as="for-desc" label="Page Custom Content" htmlTag="div" htmlClass="for-desc">
        		<block class="Magento\Framework\View\Element\Template" name="for-desc-block"/>
        	</container>
        </referenceContainer> 
        <move element="afcAztbJSGPTf1CKLQbTtDKUR5ubPLsE" 			destination="for-desc" before="product.info.sku"/>				<!-- Product description -->
        <move element="product.info.sku" 							destination="for-desc" after="afcAztbJSGPTf1CKLQbTtDKUR5ubPLsE"/>	<!-- sku -->
        <move element="product.info.description"					destination="for-desc" after="product.info.sku"/>			<!-- description  --> 
        <move element="product.info.overview"						destination="for-desc" after="-"/>									<!-- dots --> 
        <move element="catalog.product.related"			destination="main" before="PTi8b3iZhNu6AFANn6SrmwNmdrrl7t3N"/>					<!-- Delivery options -->
        <move element="PTi8b3iZhNu6AFANn6SrmwNmdrrl7t3N"						destination="main" before="product.info.details" after="catalog.product.related"/> <!-- also bought -->
        <move element="product.info.details"						destination="main" before="kDlaMEg3miYhQwJsG3JhzPP6Qcisguvu" after="catalog.product.related" /> <!-- reviews -->
        <move element="kDlaMEg3miYhQwJsG3JhzPP6Qcisguvu"			destination="main" after="-"/>											<!-- You recently viewed -->
    </body>
</page>
