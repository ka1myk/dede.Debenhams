<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <tab id="evincemage" translate="label" sortOrder="1000">
            <label>Evincemage</label>
        </tab>
        <section id="translate" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Language Translator</label>
            <tab>evincemage</tab>
            <resource>Evincemage_Translate::translate</resource>
            <group id="active_display" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="translate_snippet" translate="label comment" sortOrder="3" type="textarea" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Snippet Code</label>
                   <comment>Go to https://translate.google.com/manager/website/add For Snippet code</comment>
               </field>
            </group>
        </section>
    </system>
</config>
